@page "/"
@using Volo.Abp.MultiTenancy
@inherits EmployeeManagerComponentBase
@inject ICurrentTenant CurrentTenant
@inject AuthenticationStateProvider AuthenticationStateProvider
<div class="container">
    <div class="p-5 text-center">
        <Badge Color="Color.Success" class="mb-4">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>EmployeeManager</strong> is successfully running!</h5>
        </Badge>

        <h1>Welcome to the Employee Manager Application</h1>

        @if ( !CurrentUser.IsAuthenticated )
        {
            <a class="btn btn-primary" href="/authentication/login">
                <i class="fa fa-sign-in-alt"></i> @L["Login"]
            </a>
        }
    </div>

</div>
